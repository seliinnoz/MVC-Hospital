@model Hospital2.Models.Doktor

@{
    ViewData["Title"] = "Doktor Oluştur";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Doktor Oluştur</h1>


<hr />
<div class="row justify-content-center  mt-5">
    <div class="col-md-4">
        <form asp-action="DoktorCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="DoktarAdi" class="control-label">Doktor Adı</label>
                <input asp-for="DoktarAdi" class="form-control" />
                <span asp-validation-for="DoktarAdi" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Poliklinik" class="control-label"></label>
                <select asp-for="PoliklinikId" asp-items="ViewBag.PoliklinikList" class="form-control">
                    <option value="">Poliklinik Seç</option>
                </select>
                <span asp-validation-for="PoliklinikId" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Ekle" class="btn btn-primary  w-100" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="DoktorList">Geri Dön</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
