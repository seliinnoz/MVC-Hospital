@model Hospital2.Models.Poliklinik

@{
    ViewData["Title"] = "Poliklinik Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Poliklinik Güncelle</h1>


<hr />
<div class="row justify-content-center  mt-5">
    <div class="col-md-4">
        <form asp-action="PoliklinikEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PoliklinikId" />
            <div class="form-group">
                <label asp-for="PoliklinikIsmi" class="control-label">Poliklinik İsmi</label>
                <input asp-for="PoliklinikIsmi" class="form-control" />
                <span asp-validation-for="PoliklinikIsmi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnaBilimDaliId" class="control-label">Anabilim Dalı</label>
                <select asp-for="AnaBilimDaliId" class="form-control" asp-items="ViewBag.AnaBilimDaliList">
                    <option value="">Anabilim Dalı Seç</option>
                </select>
               
                <span asp-validation-for="AnaBilimDaliId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2" >
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="PoliklinikList">Geri Dön</a>
        </div>
        
    </div>
    
</div>

<div>
   
</div>

