@model Hospital2.Models.AnaBilimDali

@{
    ViewData["Title"] = "Anabilim Dalı Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Anabilim Dalı Güncelle</h1>


<hr />
<div class="row justify-content-center  mt-5">
    <div class="col-md-4">
        <form asp-action="AnaBilimDaliEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnaBilimDaliId" />
            <div class="form-group">
                <label asp-for="AnaBilimDaliName" class="control-label">Anabilim Dalı Adı</label>
                <input asp-for="AnaBilimDaliName" class="form-control" />
                <span asp-validation-for="AnaBilimDaliName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="AnaBilimDaliList">Geri Dön</a>
        </div>
    </div>
   
</div>

