@model Hospital2.Models.Doktor

@{
    ViewData["Title"] = "Doktor Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Doktor Güncelle</h1>


<hr />
<div class="row justify-content-center  mt-5">
    <div class="col-md-4">
        <form asp-action="DoktorEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoktorId" />
            <div class="form-group">
                <label asp-for="DoktarAdi" class="control-label">Doktor Adı</label>
                <input asp-for="DoktarAdi" class="form-control" />
                <span asp-validation-for="DoktarAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoliklinikId" class="control-label">Poliklinik Adı</label>
                <select asp-for="PoliklinikId" class="form-control" asp-items="ViewBag.PoliklinikList">
                    <option value="">Poliklinik Seç</option></select>
                <span asp-validation-for="PoliklinikId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="DoktorList">Geri Dön</a>
        </div>
      
    </div>

   
</div>



