@model IEnumerable<Hospital2.Models.User>
@{
    Layout = "_LayoutAdmin";
}

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h1>Kayıtlı Hastalar</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.UserName) *@
                Hasta Adı Soyadı
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Password) *@
                Şifre
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cinsiyet)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DogumTarihi) *@
                Doğum Tarihi
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cinsiyet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DogumTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Boy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilo)
            </td>
            <td>
                    <a class="btn btn-outline-success"   asp-action="UserEdit" asp-route-id="@item.Id">Güncelle</a> 
                
                    <a class="btn btn-outline-danger"
                    asp-action="UserDelete" asp-route-id="@item.Id">
