@model Hospital2.Models.AnaBilimDali

@{
    ViewData["Title"] = "Anabilim Dalı Oluştur";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Anabilim Dalı Oluştur</h1>


<hr />
<div class="row justify-content-center  mt-5">
    <div class="col-md-4">
        <form asp-action="AnabilimDaliCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnaBilimDaliName" class="control-label">Anabilim Dalı</label>
                <input asp-for="AnaBilimDaliName" class="form-control" />
                <span asp-validation-for="AnaBilimDaliName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Ekle" class="btn btn-primary w-100" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="AnaBilimDaliListList">Geri Dön</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
